{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "package-tracker",
  "title": "Parcel",
  "description": "A Raycast extension that allows you to track your packages using 17track's REST API.  All supported agencies are those of 17track.",
  "icon": "icon.png",
  "author": "cojmeister",
  "categories": [
    "Productivity",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "trackParcel",
      "title": "Track Parcel",
      "subtitle": "Track a given package",
      "description": "Returns a package's last location - event",
      "mode": "view",
      "arguments": [
        {
          "name": "packageNumber",
          "placeholder": "e.g. \"RR123465789CN\"",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.91.2",
    "@raycast/utils": "^1.18.1",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3"
  },
  "preferences": [
    {
      "name": "apiKey",
      "title": "17Track API Token",
      "description": "Your 17track API Key - get one at 17Track.com",
      "type": "password",
      "default": "",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
